<div class="container" style="margin-top: 50px;">
    <h1>Timeline</h1>
    <div class="timeline_form">
        <form action="/create" method="POST">
          <div class="form-group">
            <label>Title</label>
            <input name="community_title" type="string" class="form-control" placeholder="Input title">
          </div>
          <div class="form-group">
            <label>Content</label>
            <textarea name="community_content" class="form-control" placeholder="Input Content" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label>File input</label>
            <input type="file" class="form-control-file" value="File">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>  
    </div>
    <div class="list" style="margin-top: 50px;">
        <% @every_community.each do |c| %>
            <a href="/community/form/<%= c.id %>"><h4><%= c.title %></h4></a>
            <p><%= c.content %></p>
            <form action="/community/comment/<%= c.id %>" method="POST">
                <label>Input Comment</label>
                <textarea name="comment" class="form-control" rows="2"></textarea><br>
                <button type="submit" class="btn btn-warning">Reply</button>
            </form>
            <% c.comments.each do |r| %>
                <%= r.comment %><br>
            <% end %>
            <hr>    
        <% end %>   
    </div>
</div>
